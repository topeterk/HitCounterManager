<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="HitCounterManager.Controls.FramedImageButton">
    <Border Margin="3" CornerRadius="5" BorderThickness="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
            BorderBrush="DimGray" Background="{Binding $parent[UserControl].MainColor}" >
        <Button Command="{Binding $parent[UserControl].OnClickCommand}" PointerPressed="ButtonPointerPressedHandler" Background="Transparent" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Image Source="{Binding $parent[UserControl].ImgSrc}" Width="32" Height="32" VerticalAlignment="Center" HorizontalAlignment="Center" />
        </Button>
    </Border>
</UserControl>
