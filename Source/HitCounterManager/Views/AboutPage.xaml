<UserControl xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:c="clr-namespace:HitCounterManager.Common;assembly=HitCounterManager.PCL"
        xmlns:vm="clr-namespace:HitCounterManager.ViewModels;assembly=HitCounterManager.PCL"
        x:Class="HitCounterManager.Views.AboutPage">

	<UserControl.DataContext>
		<vm:ViewModelWindowBase />
	</UserControl.DataContext>

	<DockPanel Margin="10">
		<TextBlock DockPanel.Dock="Top"    Margin="20" Text="{x:Static c:Statics.ApplicationTitle}" HorizontalAlignment="Center" FontWeight="Bold"/>
		<Button    DockPanel.Dock="Bottom" Margin="20" Width="200" Content="OK" Click="CloseHandler" HorizontalAlignment="Right"/>

		<Border Padding="2" Classes="InfoBoxBorder">
			<ScrollViewer Padding="0,0,30,0" AllowAutoHide="false">
				<TextBox TextWrapping="Wrap" Padding="5" IsReadOnly="true" Text="{c:StringFromManifest Resource=.THIRDPARTYLICENSEREADME}" />
			</ScrollViewer>
		</Border>
	</DockPanel>
</UserControl>
